/* components/tabs/tabs.wxss */
.container{
  height : 100%;
  display: flex;
  flex-direction: column;
}
.tabs{
  display : flex;
  padding: 30rpx 0;
  background-color : #fff;
  align-items : center;
  height : 126rpx;
  box-sizing : border-box;
}
.tab-item{
  flex : 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.tab-label{
  color : #888888;
  white-space: nowrap;
}
.active-tab{
  color : #333333;
  font-weight: bold;
}
.tab-item .divider{
  height : 6rpx;
  width : 50rpx;
  margin-top : 10rpx;
  background-color : #f3d066;
}

.tab-panel {
  flex : 1;
  background-color: #eee;
}