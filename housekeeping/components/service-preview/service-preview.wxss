@import "/iconfont/iconfont.wxss";
.container{
    box-sizing: border-box;
    display: flex;
    font-size: 20rpx;
    background-color: #fff;
    padding: 30rpx 30rpx;
    border-radius: 20rpx;
    margin-top:20rpx;
}
.left{
    position : relative;
}
.type-tag{
    padding: 10rpx;
    width : max-content;
    background-color : #333333;
    opacity : 0.7;
    color : #fff;
    font-size : 14rpx;
    z-index : 2;
    position : absolute;
    right : 0;
    top : 0;
}
.cover-image{
    width : 180rpx;
    height : 190rpx;
    border-radius : 10rpx;
}
.right{
    width : 100%;
    display : flex;
    flex-direction : column;
    margin-left: 30rpx;
    justify-content : space-between;
}
.row{
    display : flex;
    align-items : center;
}
.service-title{
    min-width : 100rpx;
    max-width : 340rpx;
    font-size : 32rpx;
    display : -webkit-box;
    -webkit-box-orient : vertical;
    -webkit-line-clamp : 1;
    overflow : hidden;
}

.category{
    display : flex;
    align-items : center;
    margin-left : 20rpx;
}

.publisher{
    display : flex;
    align-items : center;
}
.publisher-avatar-image{
    width : 40rpx;
    height : 40rpx;
    border-radius : 50%;
}
.publisher-nickname{
    margin-left : 10rpx;
}

.score{
    color : #f27013;
    margin-left : 20rpx;
}
.create-time{
    color : #888888;
}
.price{
    font-size : 32rpx;
    color : red;
}
.sales{
    color : #888888;
}
.row-last{
    display : flex;
    justify-content : space-between;
}
.label{
    color : red;
    font-size : 22rpx;
}