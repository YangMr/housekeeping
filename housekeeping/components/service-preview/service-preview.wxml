<view class="container">
  <view class="left">
    <image class="cover-image" src="{{service.cover_image.path}}"></image>
    <text class="type-tag">{{service.type === serviceType.PROVIDE ? '在提供' : '正在找'}}</text>
  </view>
  <view class="right">
    <view class="row">
      <view class="service-title">{{service.title}}</view>
      <view class="category">
        <i-icon name="biaoqian" color ="#f27013" ></i-icon>
        <view class="category-text">
          {{service.category.name}}
        </view>
      </view>
    </view>
    <view class="row">
      <view class="publisher">
        <view class="publisher-avatar">
          <image class="publisher-avatar-image" src="{{service.publisher.avatar}}"></image>
        </view>
        <view class="publisher-nickname">{{service.publisher.nickname}}</view>
      </view>
      <view class="score">
        <i-icon name="star" color="#fbc02d"></i-icon>
        <view class="score-text">
          {{service.score}}
        </view>
        
      </view>
    </view>
    <view class="row">
      <view class="create-time">{{service.create_time}}</view> 
    </view>
    <view class="row row-last">
      <view class="price">
        <text>¥</text>{{service.price}}
      </view>
      <view class="sales">
        已售 {{service.sales_volume}}
      </view>
    </view>
  </view>
</view>
